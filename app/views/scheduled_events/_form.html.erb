<%= form_with(model: scheduled_event, class: "contents") do |form| %>
  <% if scheduled_event.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(scheduled_event.errors.count, "error") %> prohibited this scheduled_event from being saved:</h2>

      <ul class="list-disc ml-6">
        <% scheduled_event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :contact_id %>
    <%= form.text_field :contact_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": scheduled_event.errors[:contact_id].none?, "border-red-400 focus:outline-red-600": scheduled_event.errors[:contact_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :training_course_id %>
    <%= form.text_field :training_course_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": scheduled_event.errors[:training_course_id].none?, "border-red-400 focus:outline-red-600": scheduled_event.errors[:training_course_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :lesson_slug %>
    <%= form.text_field :lesson_slug, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": scheduled_event.errors[:lesson_slug].none?, "border-red-400 focus:outline-red-600": scheduled_event.errors[:lesson_slug].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :start_at %>
    <%= form.datetime_field :start_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": scheduled_event.errors[:start_at].none?, "border-red-400 focus:outline-red-600": scheduled_event.errors[:start_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :end_at %>
    <%= form.datetime_field :end_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": scheduled_event.errors[:end_at].none?, "border-red-400 focus:outline-red-600": scheduled_event.errors[:end_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :note %>
    <%= form.textarea :note, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": scheduled_event.errors[:note].none?, "border-red-400 focus:outline-red-600": scheduled_event.errors[:note].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
