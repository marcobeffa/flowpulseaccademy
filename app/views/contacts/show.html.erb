 <% if notice.present? && 1 == 2 %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
<% end %>
<% content_for :title, "Showing contact" %>
<% content_for :title, "Grazie! Richiesta inviata" %>
<!-- Hero conferma -->
<section class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-blue-600 via-blue-700 to-blue-900 p-8 md:p-12 text-white shadow">
  <div class="max-w-3xl">
    <div class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-full bg-white/20 ring-2 ring-white/30">
      <svg class="h-7 w-7" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
      </svg>
    </div>
    <h1 class="text-3xl md:text-4xl font-extrabold leading-tight">Grazie per esserti registrato!</h1>
    <p class="mt-2 text-blue-100 text-lg">
      Ti contatteremo al più presto. Ecco un riepilogo parziale dei tuoi dati.
    </p>
  </div>
</section>
<!-- Riepilogo dati -->
<section class="mt-8">
  <div class="rounded-2xl bg-white shadow p-6 md:p-8">
    <h2 class="text-xl font-bold text-gray-900 mb-4">Riepilogo</h2>
    <dl class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <dt class="text-sm text-gray-500">Nome</dt>
        <dd class="mt-1 text-gray-900">
          <% nome = @contact.nome.to_s %>
          <%= nome[0] %><%= "*" * (nome.length - 1) %>
        </dd>
      </div>
      <div>
        <dt class="text-sm text-gray-500">Cognome</dt>
        <dd class="mt-1 text-gray-900">
          <% cognome = @contact.cognome.to_s %>
          <%= cognome[0,2] %><%= "*" * (cognome.length - 2) %>
        </dd>
      </div>
      <div>
        <dt class="text-sm text-gray-500">Email</dt>
        <dd class="mt-1 text-gray-900">
          <% email = @contact.email.to_s %>
          <%= email.sub(/(.{2})(.*)(@.*)/) { "#{$1}***#{$3}" } %>
        </dd>
      </div>
      <% if @contact.respond_to?(:telefono_facoltativo) && @contact.telefono_facoltativo.present? %>
        <div>
          <dt class="text-sm text-gray-500">Telefono</dt>
          <dd class="mt-1 text-gray-900">
            <% tel = @contact.telefono_facoltativo.to_s %>
            <%= tel.gsub(/\d(?=\d{2})/, "*") %>
          </dd>
        </div>
      <% end %>
      <div>
        <dt class="text-sm text-gray-500">Profilo</dt>
        <dd class="mt-1">
          <% case @contact.tipo_utente
             when "utente" %>
            <span class="inline-flex items-center rounded-full bg-blue-50 px-3 py-1 text-sm font-medium text-blue-700 ring-1 ring-inset ring-blue-200">Utente</span>
          <% when "professionista_salute" %>
            <span class="inline-flex items-center rounded-full bg-red-50 px-3 py-1 text-sm font-medium text-red-700 ring-1 ring-inset ring-red-200">Professionista della salute</span>
          <% when "professionista_benessere" %>
            <span class="inline-flex items-center rounded-full bg-green-50 px-3 py-1 text-sm font-medium text-green-700 ring-1 ring-inset ring-green-200">Professionista del benessere</span>
          <% end %>
        </dd>
      </div>
      <div>
        <dt class="text-sm text-gray-500">Vuoi diventare insegnante?</dt>
        <dd class="mt-1">
          <% if @contact.diventa_insegnante %>
            <span class="inline-flex items-center rounded-full bg-blue-50 px-3 py-1 text-sm font-medium text-blue-700 ring-1 ring-inset ring-blue-200">Sì</span>
          <% else %>
            <span class="inline-flex items-center rounded-full bg-gray-50 px-3 py-1 text-sm font-medium text-gray-700 ring-1 ring-inset ring-gray-200">No</span>
          <% end %>
        </dd>
      </div>
    </dl>
    <div class="mt-8 flex flex-wrap gap-3">
      <%= link_to "Torna alla Home", root_path,
            class: "rounded-full bg-blue-600 px-5 py-2.5 font-semibold text-white hover:bg-blue-700 shadow" %>
      <%= link_to "Nuova richiesta", new_contact_path,
            class: "rounded-full border-2 border-gray-300 px-5 py-2.5 font-semibold text-gray-700 hover:bg-gray-50" %>
    </div>
  </div>
  <p class="mt-4 text-center text-sm text-gray-500">
    ✓ I tuoi dati sono protetti &nbsp;|&nbsp; ✓ Nessuno spam &nbsp;|&nbsp; ✓ Risposta entro 24h
  </p>
</section>
