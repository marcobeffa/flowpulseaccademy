<!-- # app/views/shared/dashboard/_breadcrumbs.html.erb -->
<% if local_assigns[:breadcrumbs]&.any? %>
  <nav class="flex mb-6" aria-label="Breadcrumb">
    <ol role="list" class="flex items-center space-x-4">
      <!-- Home -->
      <li>
        <div>
          <%= link_to dashboard_user_path, class: "text-gray-400 hover:text-gray-500" do %>
            <svg class="h-5 w-5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.293 2.293a1 1 0 011.414 0l7 7A1 1 0 0117 11h-1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-3a1 1 0 00-1-1H9a1 1 0 00-1 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1v-6H3a1 1 0 01-.707-1.707l7-7z" clip-rule="evenodd" />
            </svg>
            <span class="sr-only">Home</span>
          <% end %>
        </div>
      </li>
      <% breadcrumbs.each_with_index do |crumb, index| %>
        <li>
          <div class="flex items-center">
            <svg class="h-5 w-5 flex-shrink-0 text-gray-300" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
            </svg>
            <% if index == breadcrumbs.length - 1 %>
              <!-- Last item (current page) -->
              <span class="ml-4 text-sm font-medium text-gray-500" aria-current="page">
                <%= crumb[:name] %>
              </span>
            <% else %>
              <!-- Linked item -->
              <%= link_to crumb[:path], class: "ml-4 text-sm font-medium text-gray-500 hover:text-gray-700" do %>
                <%= crumb[:name] %>
              <% end %>
            <% end %>
          </div>
        </li>
      <% end %>
    </ol>
  </nav>
<% end %>