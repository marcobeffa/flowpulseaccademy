<!-- # app/views/shared/dashboard/_flash_messages.html.erb -->
<% flash.each do |type, message| %>
  <% next if message.blank? %>
  <% 
    case type.to_s
    when 'notice', 'success'
      css_classes = "bg-green-50 border-green-200 text-green-800"
      icon_color = "text-green-400"
      icon_path = "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
    when 'alert', 'error'
      css_classes = "bg-red-50 border-red-200 text-red-800"
      icon_color = "text-red-400"
      icon_path = "M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"
    when 'warning'
      css_classes = "bg-yellow-50 border-yellow-200 text-yellow-800"
      icon_color = "text-yellow-400"
      icon_path = "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.664-.833-2.464 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"
    when 'info'
      css_classes = "bg-blue-50 border-blue-200 text-blue-800"
      icon_color = "text-blue-400"
      icon_path = "M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
    else
      css_classes = "bg-gray-50 border-gray-200 text-gray-800"
      icon_color = "text-gray-400"
      icon_path = "M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
    end
  %>
  <div class="rounded-md border p-4 mb-4 <%= css_classes %>" id="flash-<%= type %>">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 <%= icon_color %>" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="<%= icon_path %>" />
        </svg>
      </div>
      <div class="ml-3 flex-1">
        <p class="text-sm font-medium">
          <%= message %>
        </p>
          </div>
          <div class="ml-auto pl-3">
            <div class="-mx-1.5 -my-1.5">
              <button type="button" 
                  class="inline-flex rounded-md p-1.5 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-600 focus:ring-offset-2 focus:ring-offset-gray-50"
                  onclick="this.parentElement.parentElement.parentElement.remove()">
                <span class="sr-only">Dismiss</span>
                <svg class="h-5 w-5 <%= icon_color %>" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <!-- Auto-dismiss flash messages after 5 seconds -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const flashMessages = document.querySelectorAll('[id^="flash-"]');

        flashMessages.forEach(function(message) {
          // Auto-dismiss success and info messages after 5 seconds
          if (message.id.includes('notice') || message.id.includes('success') || message.id.includes('info')) {
            setTimeout(function() {
              if (message.parentElement) {
                message.style.transition = 'opacity 0.5s ease-out';
                message.style.opacity = '0';
                setTimeout(function() {
                  message.remove();
                }, 500);
              }
            }, 5000);
          }
        });
      });
    </script>