<div class="max-w-xl mx-auto py-10 px-4">
  <h1 class="text-2xl font-bold mb-6">Nuova lista</h1>
  <%= form_with model: @list, url: generaimpresa_lists_path, local: true, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :name, "Nome", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg" %>
    </div>
    <div class="flex gap-2">
      <%= f.submit "Crea", class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700" %>
      <%= link_to "Annulla", generaimpresa_lists_path, class: "px-4 py-2 border border-gray-300 rounded-lg" %>
    </div>
  <% end %>
</div>
