<div class="max-w-3xl mx-auto py-10 px-4">
  <h1 class="text-2xl font-bold mb-6">Modifica Lista</h1>
  <%= form_with(model: [:generaimpresa, @list], local: true, class: "space-y-6") do |form| %>
    <div>
      <%= form.label :name, "Nome", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
    </div>
    <div>
      <%#= form.label :description, "Descrizione", class: "block text-sm font-medium text-gray-700" %>
      <%#= form.text_area :description, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
    </div>
    <div class="flex items-center gap-4">
      <%= form.submit "Aggiorna", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
      <%= link_to "Annulla", [:generaimpresa, @list], class: "px-4 py-2 bg-gray-200 rounded-md hover:bg-gray-300" %>
    </div>
  <% end %>
</div>
